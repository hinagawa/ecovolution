{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["warn", "single"],
        "no-multiple-empty-lines" : ["error", {"max": 2}]
    },
    "globals": {
        "require": true
    }
}
